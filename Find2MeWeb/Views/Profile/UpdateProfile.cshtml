@model Find2Me.Infrastructure.ViewModels.UserProfileVM
@using Find2Me.Infrastructure;
@{
    ViewBag.Title = "Index";
    string ExternalProviderType = User.Identity.GetExternalProviderType();
}

@section Styles{
    <link href="~/Content/plugins/cropperjs-master/dist/cropper.min.css" rel="stylesheet" />
    <style>
        .img-container,
        .preview {
            overflow: hidden;
        }
    </style>
}


<!-- Profile section -->
<section class="profile-section">
    <div class="container mt-3">
        <div class="row">
            <div class="col-12 d-flex justify-content-md-between align-items-center">
                <div>
                    <h1 class="d-inline-flex pr-3 mb-0">Your profile</h1>
                    <small class="text-muted d-inline-flex">You've been here since @Model.CreatedOn.ToString("MMMM yyyy")</small>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <hr class="pt-0 mt-0 mb-0" />
            </div>
        </div>

        <div class="row no-gutters nowrap mt-3">

            @*Page Alerts Partial*@
            @Html.Partial("_PageAlertsPartial")

            <!-- Left column -->
            <div class="col-sm-auto col-md-4 mt-4">
                <div class="row">
                    <div class="col-12 d-inline-flex justify-content-center">
                        <a class="avatar">
                            @if (!string.IsNullOrEmpty(Model.ProfileImageSelected))
                            {
                                <img id="profile_avatar" src="@_FileSavingPaths.ProfileImage/@Model.ProfileImageSelected" onerror='this.src = "/Html/img/default-profile.png";' alt="@Model.FullName" />
                            }
                            else
                            {
                                <img id="profile_avatar" src="~/Html/img/default-profile.png" alt="@Model.FullName" />
                            }
                        </a>
                    </div>

                    <div class="w-100"></div>

                    <div class="col-12 d-flex justify-content-center mt-2">
                        <button class="btn btn-default" id="edit_image_btn" role="button">Edit</button>
                    </div>

                    <div class="w-100 mb-4"></div>

                    <div class="col-12 d-inline-flex justify-content-center mt-5">
                        <div class="row">
                            <div class="col text-center"><h3><strong data-control="follower-count"></strong></h3>Followers</div>
                            <div class="col text-center"><h3><strong data-control="followed-count"></strong></h3>Follow</div>

                        </div>
                    </div>

                    <div class="w-100"></div>

                    <div class="col-12 d-inline-flex justify-content-center mt-5">
                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteprofileModal">Delete profile</button>
                    </div>

                    <div class="w-100 d-md-none d-lg-none d-xl-none"></div>

                    <div class="col-12 mt-5 d-md-none d-lg-none d-xl-none ">
                        <hr />
                    </div>


                </div>
            </div>

            <!-- Right column -->
            <div class="col pl-2 pr-2 text-truncate align-self-center">
                <!-- Form for profile data -->
                <!-- Form for collecting user information -->
                @using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post, new { id = "profile_info_form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-4 col-xl-3 col-form-label" })
                        <div class="col">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", placeholder = "" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <small id="headlineHelpBlock" class="form-text text-muted">
                                Your account is registered with this email address, through @ExternalProviderType
                            </small>
                        </div>
                    </div>

                    <div class="form-group row  mt-3">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "col-12 col-xl-3 col-form-label" })
                        <div class="col">
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your full name" } })
                            <small id="fullnameHelpBlock" class="form-text text-muted">

                            </small>
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row  mt-3">
                        <label for="UrlUsername" class="col-12 col-xl-3 col-form-label">
                            Username
                            <i class="fa fa-check-circle green" data-toggle="tooltip" data-placement="top" title="Username is invalid." id="valid_username_icon" style="display: none;"></i>
                            <i class="fa fa-times-circle red" data-toggle="tooltip" data-placement="top" title="Username is invalid." id="invalid_username_icon" style="display: none;"></i>
                        </label>
                        <div class="col">
                            @Html.EditorFor(model => model.UrlUsername, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a username" } })
                            <small id="fullnameHelpBlock" class="form-text text-muted">

                            </small>
                            <div class="" id="usernames_suggestion_wrapper">

                            </div>
                            @Html.ValidationMessageFor(model => model.UrlUsername, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mt-5">
                        <label for="YearOfBirth" class="col-12 col-xl-3 col-form-label">Year of birth:  <i class="fa fa-question-circle" aria-hidden="true"></i></label>
                        <div class="col col-md-4">
                            @Html.DropDownListFor(model => model.YearOfBirth, new SelectList(ViewBag.YearsOfBirth, "Value", "Key"), "Select", new { @class = "form-control" })
                            <small id="birthHelpBlock" class="form-text text-muted">

                            </small>
                            @Html.ValidationMessageFor(model => model.YearOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "col-4 col-xl-3 col-form-label" })
                        <div class="col">
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.Sex, _EnSex.Female, new { @class = "form-check-input", id = "radio_sex_female" })
                                @Html.Label("radio_sex_female", "Female", new { @class = "form-check-label" })
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.Sex, _EnSex.Male, new { @class = "form-check-input", id = "radio_sex_male" })
                                @Html.Label("radio_sex_male", "Male", new { @class = "form-check-label" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mt-5">
                        @Html.LabelFor(model => model.PreferredCurrency, htmlAttributes: new { @class = "col-12 col-xl-3 col-form-label" })
                        <div class="col col-md-4">
                            @Html.DropDownListFor(model => model.PreferredCurrency, new SelectList(ViewBag.CurrencyList, "Code", "Code"), "Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PreferredCurrency, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mt-5">
                        @Html.LabelFor(model => model.PreferredLanguage, htmlAttributes: new { @class = "col-12 col-xl-3 col-form-label" })
                        <div class="col col-md-4">
                            @Html.DropDownListFor(model => model.PreferredLanguage, new SelectList(ViewBag.LanguagesList, "Value", "Key"), "Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PreferredLanguage, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr class="mt-5" />

                    <div class="form-group row d-flex justify-content-center">
                        <input type="submit" class="btn btn-dark" role="button" value="Update profile" />
                    </div>
                }

            </div>
        </div>

    </div>
